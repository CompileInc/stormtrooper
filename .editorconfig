# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
insert_final_newline = true

# Set default charset
[*.{js,css,html,json,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{js,css,html,json}]
indent_style = space
indent_size = 2

